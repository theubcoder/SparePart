{%- comment -%}
  Translates section text based on current locale
  Usage: {% render 'translate-section-text', key: 'image_banner.heading', default: 'Image banner' %}
{%- endcomment -%}

{%- liquid
  assign translated_text = default
  
  if request.locale.iso_code == 'ar'
    case key
      # Image Banner Section
      when 'image_banner.heading'
        assign translated_text = 'بنر الصور'
      when 'image_banner.text'
        assign translated_text = 'قدم للعملاء تفاصيل حول صورة البنر أو المحتوى في القالب.'
      when 'image_banner.shop_all'
        assign translated_text = 'تسوق الكل'
      
      # Rich Text Section (Brand)
      when 'rich_text.brand_heading'
        assign translated_text = 'عن علامتنا التجارية'
      when 'rich_text.brand_text'
        assign translated_text = 'شارك المعلومات حول علامتك التجارية مع عملائك. صف منتجًا أو أعلن عن العروض أو رحب بالعملاء في متجرك.'
      when 'talk_about_brand'
        assign translated_text = 'نبذة عن متجرنا'
      
      # Featured Products
      when 'featured_collection.title'
        assign translated_text = 'المنتجات المميزة'
      when 'featured_collection.view_all'
        assign translated_text = 'عرض الكل'
      
      # Multimedia Collage
      when 'collage.heading'
        assign translated_text = 'مجموعة الوسائط المتعددة'
      
      # Multicolumn
      when 'multicolumn.column'
        assign translated_text = 'عمود'
      when 'multicolumn.column_text'
        assign translated_text = 'اجمع النص مع صورة للتركيز على المنتج أو المجموعة أو منشور المدونة المختار. أضف تفاصيل حول التوفر أو النمط أو حتى قدم مراجعة.'
      
      # Product Cards
      when 'products.add_to_cart'
        assign translated_text = 'أضف إلى السلة'
      when 'products.quick_add'
        assign translated_text = 'إضافة سريعة'
      when 'products.choose_options'
        assign translated_text = 'اختر الخيارات'
      when 'products.view_product'
        assign translated_text = 'عرض المنتج'
      when 'products.from'
        assign translated_text = 'من'
      when 'products.sold_out'
        assign translated_text = 'نفد المخزون'
      when 'products.on_sale'
        assign translated_text = 'تخفيض'
      when 'products.new'
        assign translated_text = 'جديد'
      when 'products.vendor'
        assign translated_text = 'البائع'
      
      # Cart
      when 'cart.title'
        assign translated_text = 'سلة التسوق'
      when 'cart.empty'
        assign translated_text = 'سلتك فارغة'
      when 'cart.continue_shopping'
        assign translated_text = 'متابعة التسوق'
      when 'cart.checkout'
        assign translated_text = 'الدفع'
      when 'cart.subtotal'
        assign translated_text = 'المجموع الفرعي'
      when 'cart.remove'
        assign translated_text = 'إزالة'
      when 'cart.update'
        assign translated_text = 'تحديث'
      when 'cart.quantity'
        assign translated_text = 'الكمية'
      when 'cart.total'
        assign translated_text = 'المجموع'
      
      # Footer
      when 'footer.subscribe'
        assign translated_text = 'اشترك في نشرتنا الإخبارية'
      when 'footer.email_placeholder'
        assign translated_text = 'البريد الإلكتروني'
      when 'footer.subscribe_button'
        assign translated_text = 'اشترك'
      when 'footer.quick_links'
        assign translated_text = 'روابط سريعة'
      when 'footer.follow_us'
        assign translated_text = 'تابعنا'
      when 'footer.contact_info'
        assign translated_text = 'معلومات الاتصال'
      when 'footer.about_us'
        assign translated_text = 'من نحن'
      when 'footer.privacy_policy'
        assign translated_text = 'سياسة الخصوصية'
      when 'footer.terms_of_service'
        assign translated_text = 'شروط الخدمة'
      when 'footer.refund_policy'
        assign translated_text = 'سياسة الاسترداد'
      when 'footer.shipping_policy'
        assign translated_text = 'سياسة الشحن'
      when 'footer.copyright'
        assign translated_text = 'جميع الحقوق محفوظة'
      
      # Search
      when 'search.title'
        assign translated_text = 'البحث'
      when 'search.placeholder'
        assign translated_text = 'ابحث في متجرنا...'
      when 'search.submit'
        assign translated_text = 'بحث'
      when 'search.no_results'
        assign translated_text = 'لم يتم العثور على نتائج'
      when 'search.results_count'
        assign translated_text = 'نتائج البحث'
      
      # Customer Account
      when 'customer.login'
        assign translated_text = 'تسجيل الدخول'
      when 'customer.create_account'
        assign translated_text = 'إنشاء حساب'
      when 'customer.forgot_password'
        assign translated_text = 'نسيت كلمة المرور؟'
      when 'customer.email'
        assign translated_text = 'البريد الإلكتروني'
      when 'customer.password'
        assign translated_text = 'كلمة المرور'
      when 'customer.first_name'
        assign translated_text = 'الاسم الأول'
      when 'customer.last_name'
        assign translated_text = 'اسم العائلة'
      when 'customer.sign_in'
        assign translated_text = 'تسجيل الدخول'
      when 'customer.register'
        assign translated_text = 'تسجيل'
      when 'customer.logout'
        assign translated_text = 'تسجيل الخروج'
      when 'customer.my_account'
        assign translated_text = 'حسابي'
      when 'customer.orders'
        assign translated_text = 'الطلبات'
      when 'customer.addresses'
        assign translated_text = 'العناوين'
      
      # 404 Page
      when '404.title'
        assign translated_text = 'الصفحة غير موجودة'
      when '404.subtext'
        assign translated_text = 'عذرًا، لا يمكننا العثور على الصفحة التي تبحث عنها.'
      when '404.continue_shopping'
        assign translated_text = 'العودة إلى التسوق'
      
      # Collection Page
      when 'collection.filter'
        assign translated_text = 'تصفية'
      when 'collection.sort'
        assign translated_text = 'ترتيب'
      when 'collection.sort_featured'
        assign translated_text = 'مميز'
      when 'collection.sort_best_selling'
        assign translated_text = 'الأكثر مبيعًا'
      when 'collection.sort_az'
        assign translated_text = 'أبجديًا، أ-ي'
      when 'collection.sort_za'
        assign translated_text = 'أبجديًا، ي-أ'
      when 'collection.sort_price_low'
        assign translated_text = 'السعر، من الأقل إلى الأعلى'
      when 'collection.sort_price_high'
        assign translated_text = 'السعر، من الأعلى إلى الأقل'
      when 'collection.sort_date_old'
        assign translated_text = 'التاريخ، من القديم إلى الجديد'
      when 'collection.sort_date_new'
        assign translated_text = 'التاريخ، من الجديد إلى القديم'
      
      # Product Page
      when 'product.quantity'
        assign translated_text = 'الكمية'
      when 'product.add_to_cart'
        assign translated_text = 'أضف إلى السلة'
      when 'product.back_to_collection'
        assign translated_text = 'العودة إلى {{ collection }}'
      when 'product.sold_out'
        assign translated_text = 'نفد المخزون'
      when 'product.unavailable'
        assign translated_text = 'غير متوفر'
      when 'product.vendor'
        assign translated_text = 'البائع'
      when 'product.sku'
        assign translated_text = 'رمز المنتج'
      when 'product.description'
        assign translated_text = 'الوصف'
      when 'product.share'
        assign translated_text = 'مشاركة'
      when 'product.include_taxes'
        assign translated_text = 'شامل الضريبة'
      when 'product.shipping_calculated'
        assign translated_text = 'يتم حساب الشحن عند الدفع'
      
      # Spare Parts Specific
      when 'spare_parts.search_title'
        assign translated_text = 'البحث عن قطع الغيار'
      when 'spare_parts.select_vehicle'
        assign translated_text = 'اختر مركبتك'
      when 'spare_parts.brand'
        assign translated_text = 'الماركة'
      when 'spare_parts.model'
        assign translated_text = 'الموديل'
      when 'spare_parts.year'
        assign translated_text = 'السنة'
      when 'spare_parts.search'
        assign translated_text = 'بحث'
      when 'spare_parts.part_number'
        assign translated_text = 'رقم القطعة'
      when 'spare_parts.oem_number'
        assign translated_text = 'رقم المصنع الأصلي'
      when 'spare_parts.compatibility'
        assign translated_text = 'التوافق'
      when 'spare_parts.warranty'
        assign translated_text = 'الضمان'
      when 'spare_parts.availability'
        assign translated_text = 'التوفر'
      when 'spare_parts.in_stock'
        assign translated_text = 'متوفر'
      when 'spare_parts.out_of_stock'
        assign translated_text = 'غير متوفر'
      
      else
        assign translated_text = default
    endcase
  endif
-%}

{{ translated_text }}