{%- comment -%}
  Translates product titles to Arabic if a translation exists
  Usage: {% render 'translate-product-title', product_title: product.title %}
{%- endcomment -%}

{%- liquid
  assign title_lower = product_title | downcase | strip
  assign translated_title = product_title
  
  if request.locale.iso_code == 'ar'
    # Try to find a translation based on common patterns
    case title_lower
      when 'brake pads'
        assign translated_title = 'وسادات الفرامل'
      when 'oil filter'
        assign translated_title = 'فلتر الزيت'
      when 'air filter'
        assign translated_title = 'فلتر الهواء'
      when 'spark plugs', 'spark plug'
        assign translated_title = 'شمعات الإشعال'
      when 'battery'
        assign translated_title = 'البطارية'
      when 'alternator'
        assign translated_title = 'المولد'
      when 'starter motor', 'starter'
        assign translated_title = 'بادئ الحركة'
      when 'radiator'
        assign translated_title = 'الرادياتير'
      when 'water pump'
        assign translated_title = 'مضخة المياه'
      when 'fuel pump'
        assign translated_title = 'مضخة الوقود'
      when 'brake disc', 'brake rotor'
        assign translated_title = 'قرص الفرامل'
      when 'brake fluid'
        assign translated_title = 'زيت الفرامل'
      when 'engine oil', 'motor oil'
        assign translated_title = 'زيت المحرك'
      when 'transmission fluid'
        assign translated_title = 'زيت ناقل الحركة'
      when 'coolant', 'antifreeze'
        assign translated_title = 'سائل التبريد'
      when 'windshield wipers', 'wiper blades'
        assign translated_title = 'مساحات الزجاج'
      when 'headlight', 'headlamp'
        assign translated_title = 'المصباح الأمامي'
      when 'tail light', 'taillight'
        assign translated_title = 'المصباح الخلفي'
      when 'turn signal', 'blinker'
        assign translated_title = 'إشارة الانعطاف'
      when 'mirror', 'side mirror'
        assign translated_title = 'المرآة'
      when 'door handle'
        assign translated_title = 'مقبض الباب'
      when 'seat cover'
        assign translated_title = 'غطاء المقعد'
      when 'floor mat', 'floor mats'
        assign translated_title = 'سجادة الأرضية'
      when 'steering wheel'
        assign translated_title = 'عجلة القيادة'
      when 'clutch'
        assign translated_title = 'القابض'
      when 'gearbox', 'transmission'
        assign translated_title = 'صندوق التروس'
      when 'suspension'
        assign translated_title = 'نظام التعليق'
      when 'shock absorber', 'shocks'
        assign translated_title = 'ممتص الصدمات'
      when 'exhaust', 'exhaust system'
        assign translated_title = 'العادم'
      when 'muffler'
        assign translated_title = 'كاتم الصوت'
      when 'catalytic converter'
        assign translated_title = 'المحول الحفاز'
      when 'timing belt'
        assign translated_title = 'سير التوقيت'
      when 'serpentine belt', 'drive belt'
        assign translated_title = 'السير المتعرج'
      when 'thermostat'
        assign translated_title = 'الثرموستات'
      when 'ignition coil'
        assign translated_title = 'ملف الإشعال'
      when 'fuel injector'
        assign translated_title = 'حاقن الوقود'
      when 'oxygen sensor', 'o2 sensor'
        assign translated_title = 'حساس الأكسجين'
      when 'cam sensor', 'camshaft sensor'
        assign translated_title = 'حساس الكامة'
      when 'crank sensor', 'crankshaft sensor'
        assign translated_title = 'حساس العمود المرفقي'
      when 'wheel bearing'
        assign translated_title = 'محمل العجلة'
      when 'cv joint'
        assign translated_title = 'وصلة السرعة الثابتة'
      when 'drive shaft', 'driveshaft'
        assign translated_title = 'عمود الإدارة'
      when 'differential'
        assign translated_title = 'الدفرنشل'
      when 'example product'
        assign translated_title = 'منتج مثال'
      when 'a bar of golden yellow wax'
        assign translated_title = 'قطعة من الشمع الأصفر الذهبي'
      when 'a bar of purple wax'
        assign translated_title = 'قطعة من الشمع الأرجواني'
      when 'selling plans ski wax', 'ski wax'
        assign translated_title = 'شمع التزلج'
      when 'the 3p fulfilled snowboard'
        assign translated_title = 'لوح التزلج 3p المكتمل'
      when 'the collection snowboard: hydrogen'
        assign translated_title = 'لوح التزلج: هيدروجين'
      when 'the collection snowboard: liquid'
        assign translated_title = 'لوح التزلج: سائل'
      when 'the collection snowboard: oxygen'
        assign translated_title = 'لوح التزلج: أكسجين'
      when 'the multi-managed snowboard'
        assign translated_title = 'لوح التزلج متعدد الإدارة'
      when 'the multi-location snowboard'
        assign translated_title = 'لوح التزلج متعدد المواقع'
      when 'the compare at price snowboard'
        assign translated_title = 'لوح التزلج للمقارنة'
      when 'the hidden snowboard'
        assign translated_title = 'لوح التزلج المخفي'
      when 'gift card'
        assign translated_title = 'بطاقة هدية'
      when 'the inventory not tracked snowboard'
        assign translated_title = 'لوح التزلج غير المتتبع'
      when 'the complete snowboard'
        assign translated_title = 'لوح التزلج الكامل'
      when 'sample product', 'example product title'
        assign translated_title = 'منتج عينة'
      else
        # Check if title contains certain keywords
        if title_lower contains 'brake'
          if title_lower contains 'pad'
            assign translated_title = 'وسادات الفرامل'
          elsif title_lower contains 'disc' or title_lower contains 'rotor'
            assign translated_title = 'قرص الفرامل'
          elsif title_lower contains 'fluid'
            assign translated_title = 'زيت الفرامل'
          else
            assign translated_title = 'قطعة فرامل'
          endif
        elsif title_lower contains 'filter'
          if title_lower contains 'oil'
            assign translated_title = 'فلتر الزيت'
          elsif title_lower contains 'air'
            assign translated_title = 'فلتر الهواء'
          elsif title_lower contains 'fuel'
            assign translated_title = 'فلتر الوقود'
          else
            assign translated_title = 'فلتر'
          endif
        elsif title_lower contains 'oil'
          if title_lower contains 'engine' or title_lower contains 'motor'
            assign translated_title = 'زيت المحرك'
          elsif title_lower contains 'transmission'
            assign translated_title = 'زيت ناقل الحركة'
          else
            assign translated_title = 'زيت'
          endif
        elsif title_lower contains 'sensor'
          assign translated_title = 'حساس'
        elsif title_lower contains 'pump'
          assign translated_title = 'مضخة'
        elsif title_lower contains 'belt'
          assign translated_title = 'سير'
        elsif title_lower contains 'light' or title_lower contains 'lamp'
          assign translated_title = 'مصباح'
        elsif title_lower contains 'snowboard'
          assign translated_title = 'لوح التزلج'
        elsif title_lower contains 'wax'
          if title_lower contains 'ski'
            assign translated_title = 'شمع التزلج'
          elsif title_lower contains 'yellow' or title_lower contains 'golden'
            assign translated_title = 'شمع أصفر'
          elsif title_lower contains 'purple'
            assign translated_title = 'شمع أرجواني'
          else
            assign translated_title = 'شمع'
          endif
        elsif title_lower contains 'gift card'
          assign translated_title = 'بطاقة هدية'
        endif
    endcase
  endif
  
  echo translated_title
-%}